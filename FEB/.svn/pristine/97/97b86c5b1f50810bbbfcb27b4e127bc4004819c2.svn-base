@charset "UTF-8";
/*header css*/
body{
    margin:0;
    text-decoration:none;
	color:white;
}

a{
	 text-decoration:none;
	color:white;
}

.navbar{

	justfy-content:space-between;
    display: flex;
    align-items: center;
    background-color: #263343;
    padding: 8px 12px;
}
.navbar_logo{
	font-size:24px;
	color:white;
}

.navbar_logo i{
	color:#d49466;
}

.navbar_menu{
	display:flex;
	list-style:none;
	padding-left:0;
	float :left;
}

.navbar_menu li{
	padding:8px 12px;
}
.navbar_menu li:hover{
	background-color:#d49466;
	border-radius:4px;
}
.navbar_icons{
	list-style:none;
	color:white;
	display:flex;
	margin-top: 10px;/* 추가함 */
}
.navbar_icons li{
	padding: 5px 12px;
}
/*//header css*/

/*common css*/
* {
    padding: 0px;
    margin: 0px;
    box-sizing: border-box;
}

.frame {
	max-width: 1300px;
    padding: 0 30px;
    margin: 0 auto;
}

/*//common css*/

/*main css*/


#header-second {
	max-width: 1300px;
    padding: 10px 40px;
    margin: 0 auto;
	display: flex;
	justify-content: space-between;
	height: 120px;
}

.header-second-btn-group {
	width: 200px;
	height: 60px;
}

.border-btm-red {
	border-bottom: 2px solid #FF204B;
}



#main_post {
	min-height: 1000px;
	height: auto;
}

.main_page_title {
	text-align: center;
	width: 100%;
	height: auto;
	padding-top: 40px;
	margin-bottom: 30px;
}

.main_page_title_word {
	font-weight: 700;
	font-size: 24px;
}

.main_item_box {
	width: 100%;
	height: auto;
}

.main_post_list {
	display: grid;
	grid-template-columns: repeat(5, 1fr);
	grid-gap: 10px;
	grid-auto-rows: minmax(100px, auto);
}

.main_post_box {
	display: relative;
	height: auto;
}

.link_post {
	position: absolute;
	display: block;
	width: 240px;
	height: 335px;
}

.main_post_item {
	padding-bottom: 30px;
	list-style: none;
	text-decoration: none;
}

.main_post_item_img {
	width: 100%;
	height: 224px;
}

.name {
	font-size: 15px;
	font-weight: 1000;
}

.title {
	display: inline-block;
	font-size: 17px;
	font-weight: 700;
	max-width: 240px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.readCnt {
	color: #757575;
	font-size: 14px;
}
/*//main css*/

/*footer css*/
footer {
	bottom: 0;
}

.footer-black {
	margin-top: 100px;
	padding: 20px 0px;
	height: 70px;
	background-color: #1e1e1e;
	display: block;
}

.footer-text {
	color: #e2e2e2;
	font-size: 13px; 
	opacity: 0.56;
	font-weight: 500;
}


/*//footer css*/